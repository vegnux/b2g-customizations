## Rama o versi√≥n de B2G
BRANCH=master

## Tipo de build
VARIANT=eng
export PRODUCTION=1
export GAIA_DISTRIBUTION_DIR=$PWD/gaia-custom
GECKO_CONFIGURE_ARGS="--update-channel=nightly"

## Boot logo
export ENABLE_DEFAULT_BOOTANIMATION=true
export MOZILLA_OFFICIAL=1

## Limitando cache
ccache --max-size 5GB

## Cambiar host compilador
export CC=gcc-4.6
export CXX=g++-4.6

## Habilitando la depuracion
export REMOTE_DEBUGGER=1

## Idiomas GAIA
export LOCALE_BASEDIR=$PWD/gaia-l10n
export LOCALES_FILE=$PWD/gaia-l10n/languages_dev.json
export GAIA_DEFAULT_LOCALE=es

## Idiomas GECKO
export L10NBASEDIR=$PWD/gecko-l10n
export MOZ_CHROME_MULTILOCALE="en-GB es-MX pt-BR"

## Compare locales
export PATH="$PATH:$PWD/compare-locales/scripts"
export PYTHONPATH="$PWD/compare-locales/lib"
